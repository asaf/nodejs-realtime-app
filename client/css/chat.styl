@import 'nib'

body
  background linear-gradient(top, #eee, #fff)

.form-signin
  max-width 300px
  padding 19px 29px 29px
  margin 0 auto 20px
  background-color #fff
  border 1px solid #e5e5e5
  -webkit-border-radius 5px
     -moz-border-radius 5px
          border-radius 5px
  -webkit-box-shadow 0 1px 2px rgba(0,0,0,.05)
     -moz-box-shadow 0 1px 2px rgba(0,0,0,.05)
          box-shadow 0 1px 2px rgba(0,0,0,.05)

.form-signin .form-signin-heading
.form-signin .checkbox
  margin-bottom 10px

.form-signin input[type="text"],
.form-signin input[type="password"] 
  font-size 16px
  height auto
  margin-bottom 15px
  padding 7px 9px
  
#chat
  border 1px solid #ccc
  width 750px
  text-align left
  margin 30px auto
  padding 15px
  border-radius 5px
  #msgInput, #chatlog
    border none
    box-shadow inset 0 0 2px #777
    border-radius 5px
  #msgInput
    width 730px
    padding 5px
  #chatlog
    width 740px
    background-color white
    margin 5px 0
    p
      font-size 0.9em
      color #000a12
      padding 3px 9px
      margin 0
    p:first-of-type
      padding-top 12px
    p:last-of-type
      padding-bottom 12px
      display none
    span.time
      color #666
      float right
      width 70px
      text-align right
      font-size 0.7em